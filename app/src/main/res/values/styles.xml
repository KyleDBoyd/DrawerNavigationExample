<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Navigation Drawer -->
    <style name="NavigationDrawer">
        <item name="android:layout_gravity">start</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:background">@color/black</item>
    </style>

    <!-- Navigation Drawer Item -->
    <style name="ItemDrawerContainer">
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="ItemDrawerIcon">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin_half</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="ItemDrawerTitle">
        <item name="android:textSize">@dimen/drawer_title_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
</resources>
